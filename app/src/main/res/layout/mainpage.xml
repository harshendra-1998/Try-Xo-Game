<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/ic_slanted_gradient"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_ad"
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="7dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                android:visibility="gone"
                app:lottie_rawRes="@raw/adanim"
                app:lottie_repeatMode="reverse" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="12dp"
                android:id="@+id/ad_count"
                android:visibility="gone"
                android:layout_alignBottom="@id/lottie_ad"
                android:layout_alignRight="@id/lottie_ad"
                android:textColor="@color/white"
                android:padding="2dp"
                android:background="@drawable/backforback"
                android:text="3"/>
        </RelativeLayout>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/coin" />

        <TextView
            android:id="@+id/coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="00"
            android:textColor="@color/white"
            android:textSize="20dp" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="15dp"
        app:layout_constraintVertical_bias="0.3">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/logo_mainpage" />
        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/green_black_back"
            android:onClick="playcomputer"
            android:text="Play"
            android:shadowColor="#000000"
            android:shadowDy="5"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="15dp"
            android:shadowRadius="10"
            android:textColor="#fff"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/ic_buttonbak1"
            android:onClick="multtipla"
            android:text="Multiplayer (1 vs 1)"
            android:shadowColor="#000000"
            android:shadowDy="5"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="15dp"
            android:shadowRadius="10"
            android:textColor="#fff"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/ic_buttonbak2"
            android:onClick="shopedits"
            android:text="Themes shop"
            android:shadowColor="#000000"
            android:shadowDy="5"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="15dp"
            android:shadowRadius="10"
            android:textColor="#fff"
            android:textSize="20dp" />
        <Button
            android:id="@+id/button44"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/privacyack"
            android:onClick="privacyy"
            android:text="Privacy Policy"
            android:shadowColor="#000000"
            android:shadowDy="5"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="15dp"
            android:shadowRadius="10"
            android:textColor="#fff"
            android:textSize="20dp" />


    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="450dp"
        android:layout_height="450dp"
        android:id="@+id/lottie_coins"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="7dp"
        app:lottie_rawRes="@raw/daily_coins"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25+"
        android:id="@+id/lottie_text"
        android:textSize="25dp"
        android:visibility="gone"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/lottie_coins"
        app:layout_constraintEnd_toEndOf="@+id/lottie_coins"
        app:layout_constraintStart_toStartOf="@+id/lottie_coins"
        app:layout_constraintTop_toTopOf="@+id/lottie_coins" />

    <androidx.cardview.widget.CardView
        android:id="@+id/firebase"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        app:cardBackgroundColor="#00000000"
        android:onClick="linktab"
        app:cardUseCompatPadding="true">
            <ImageView
                android:id="@+id/firebaseimage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                tools:src="@tools:sample/backgrounds/scenic" />
    </androidx.cardview.widget.CardView>
    <!--ImageView
        android:id="@+id/serverimage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:srcCompat="@drawable/computer" /-->
</androidx.constraintlayout.widget.ConstraintLayout>